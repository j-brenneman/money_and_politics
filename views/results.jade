extends layout

block content
  h1.header Results 
    div
      span.subHead Year:  
        span.result #{year}  
      span.subHead State:  
        span.result #{state}  
      span.subHead District:  
        span.result #{district} 
  div.content  
    each val, i in info
      section.info
        div.name #{val.candidate}
        div
          if val.photo == 'Picture Unavailable'
            img.photo(src='./images/no_image.png' height=130 width=105)
          else  
            img.photo(src= val.photo height=130 width=105 alt='Image Unavailable')
        div
          button.showBio(type='submit' id= val.candidate) About
        div.bio #{val.bio}
        div.thead Vote Percentage
        div.percent #{val.percent}
        div.thead Net Campaign Contributions:
        div.money #{val.reciepts}
  
  script(src='../javascripts/dom.js')      
        
        
      
        
        
